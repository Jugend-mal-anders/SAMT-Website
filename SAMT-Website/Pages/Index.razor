{
    string _days = string.Empty;
    string _hours = string.Empty;
    string _minutes = string.Empty;
    string _seconds = string.Empty;

    protected override void OnInitialized()
    {
        Countdown();
        base.OnInitialized();
    }

    async void Countdown()
    {
        var samt = (await DbFactory.CreateDbContextAsync()).Events.OrderByDescending(x => x.Date).First().Date;
        while (samt > DateTime.Now)
        {
            await Task.Delay(1000);
            var countdown = samt.Subtract(DateTime.Now);
            _days = countdown.Days.ToString("D2");
            _hours = countdown.Hours.ToString("D2");
            _minutes = countdown.Minutes.ToString("D2");
            _seconds = countdown.Seconds.ToString("D2");
            StateHasChanged();
        }
    }
}
